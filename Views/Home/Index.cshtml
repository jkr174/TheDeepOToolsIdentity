@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/bannerInventory.svg" height="150" alt="Inventory" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    View Inventory
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/bannerRepair.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    View Repair Tickets
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br>
<div class="row">
    <div class="col-md-3">
        <a class="bg-primary btn btn-primary"
           asp-action="Index"
           asp-controller="Inventory">
            Inventory
        </a>
        <ul>
            <li>Look at inventory saved in the database.</li>
        </ul>
    </div>
    <div class="col-md-3">
        <a class="bg-primary btn btn-primary"
           asp-action="Index"
           asp-controller="RepairTickets">
            Repair Tickets
        </a>
        <ul>
            <li>View repair tickets for tools.</li>
        </ul>
    </div>
    <div class="col-md-3">
        <a class="bg-primary btn btn-primary"
           asp-action="Index"
           asp-controller="AppUsers">
            App Users
        </a>
        <ul>
            <li>View Users.</li>
        </ul>
    </div>
</div>
